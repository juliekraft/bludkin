<!-- this is for the cal and cycle form -->
<script id="calendar-template" type = "text/x-handlebars-template">
<div id="calendar-view">

  <div id="calendar" class="large-6 columns"></div>

  <div id="content-view" class="large-6 columns">
    <div id = "cycle-info">
      <h3>Cycle Info</h3>
        <form action="">
          <p>Start: <input id="start-date-input" class="small-3 columns" type="text" placeholder = "Click a day on the calendar"></p>
          <p>Period End: <input id="period-end-date-input" class="small-3 columns" type="text" placeholder = "When do you expect your period to end?"></p>
          <p>Pain: <input id="pain-input" class="small-3 columns" type="number" min="1" max="10" placeholder = "1: no pain, 10: severe pain"></p>
          <p>Mood: <input id="mood-input" class="small-3 columns" type="number" min="1" max="10" placeholder = "1: miserable, 10: happy"></p>
          <button class="button radius round"  id="archive">Archive</button>
        </form>
    </div>
  </div>
</div>
</script>

<!-- GRAPH -->



<!-- Splash page home page -->
  <script id="home-template" type="text/x-handlebars-template">
    <div class="row">
      <div class="twelve columns text-center" id="logo"><br/><%= image_tag "logo.png", id: "logo" %>
      <h1>Is Today the Day?</h1>
      <form action="/#calendar">
        <button class="button radius round" >Yes</button>
      </form>
      <form action="/#stats">      
        <button class="button radius round" >No</button>
      </form>
      </div>
    </div>
  </script>

  
<!-- this is for the search all friends page -->
<script id="search-template" type="text/x-handlebar-template">
      <h2>All Users</h2>
      <div id="search-field">
      <input id="search-bar" type="text"> <input class="button radius round" id="search-bar" type="submit"> 
      </div>
</script>

  <script id="friends-template" type="text/x-handlebars-template">
      <div id="profile-splash" class="row">
        <div id="profile-image" class="large-3 columns">
          <img id="profile-pic" src= "{{image}}"> 
        </div>

        <div id="profile-info" class="large-3 columns">
          <p>{{name}}<p>
          <p> {{email}}</p>
        </div>

        <div id="follow-button" class="large-3 columns">
          <button class="tiny button radius round">SYNC</button>
        </div>
      </div> </br>
  </script>

  <script id="stats-template" type="text/x-handlebars-template">

    <div data-cycle-id="{{id}}" class="cycle">
    
      <h3><strong>Cycle {{id}}</strong></h3>
      
      <div class="cycle-content">
      <p>Cycle Start Date: {{start_date}}</p> 
      <p>Period End Date: {{period_end_date}}</p> 
      <p>Cycle End Date: {{cycle_end_date}}</p>
      <button class="cycle-edit-button tiny button radius round">Edit</button>
      </div>

      <div class="cycle-form hidden">
        <form>
        Start date: <input type="text" name="start_date" placeholder="{{start_date}}">
        Period end date: <input type="text" name="period_end_date" placeholder="{{period_end_date}}">
        Cycle end date: <input type="text" name="cycle_end_date" placeholder="{{cycle_end_date}}"> 
        </form>
        <button class="cycle-update-button tiny button radius round">Update</button>
      </div>
    </div>
    
    <div id="chart-container" class="large-6 columns">
      <svg id="cycle-length"></svg>
    </div>

  </script>

  <script id="follows-template" type="text/x-handlebars-template">
    <h3 style="display: inline-block;">Following {{followee.name}}</h3><img src="{{followee.image}}"/>
    <button class='tiny button radius round' >Unfollow</button>
    <br/>
  </script>




